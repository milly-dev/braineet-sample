{
    "name": "root",
    "private": true,
    "description": "A monorepo for holding all of the Braineet's front-end code.",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "release": "lerna publish",
        "clean": "lerna clean --yes",
        "bootstrap": "yarn && yarn clean && lerna bootstrap",
        "lint": "yarn lint:js && yarn lint:styles",
        "lint:js": "eslint \"apps/\" \"packages/\"",
        "lint:styles": "stylelint \"./**/*.js\"",
        "docs": "lerna run dev --stream --scope=docs",
        "storybook": "start-storybook -s ./packages/ui/static -p 3001 --ci",
        "build-storybook": "build-storybook -o ./build",
        "workflow:dev": "lerna run dev --stream --scope=workflow",
        "brainkit:dev": "lerna run dev --stream --scope=@braineet/brainkit",
        "brainkit:build": "lerna run build --stream --scope @braineet/brainkit",
        "OLD-SCRIPT": "echo '-----------------------------------------------'",
        "ui:watch": "lerna run watch --stream --scope=@braineet/ui",
        "ui:storybook": "lerna run storybook --stream --scope=@braineet/ui",
        "ui:build": "lerna run build --stream --scope @braineet/ui"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged "
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.6.4",
        "@babel/core": "^7.10.2",
        "@babel/node": "^7.10.1",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.10.1",
        "@babel/preset-env": "^7.10.2",
        "@babel/preset-react": "^7.10.1",
        "@babel/register": "^7.10.1",
        "@babel/runtime": "^7.10.2",
        "@rollup/plugin-babel": "^5.0.3",
        "@rollup/plugin-commonjs": "^13.0.0",
        "@rollup/plugin-node-resolve": "^8.0.1",
        "@storybook/addon-a11y": "^6.0.21",
        "@storybook/addon-actions": "^6.0.21",
        "@storybook/addon-docs": "^6.0.21",
        "@storybook/addon-essentials": "^6.0.21",
        "@storybook/addon-knobs": "^6.0.21",
        "@storybook/addon-links": "^6.0.21",
        "@storybook/addon-storysource": "^6.0.21",
        "@storybook/addon-viewport": "^6.0.21",
        "@storybook/addons": "^6.0.21",
        "@storybook/react": "^6.0.21",
        "@storybook/source-loader": "^6.0.21",
        "@welldone-software/why-did-you-render": "^4.0.5",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.1.0",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-styled-components": "^1.10.6",
        "chromatic": "^5.1.0",
        "clean-webpack-plugin": "^3.0.0",
        "cross-env": "^6.0.3",
        "css-loader": "^3.6.0",
        "eslint": "^6.6.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-import": "^2.21.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.18.3",
        "eslint-plugin-react-hooks": "^2.2.0",
        "filemanager-webpack-plugin": "^2.0.5",
        "husky": "^3.0.9",
        "hygen": "^5.0.3",
        "i18next-scanner": "^2.11.0",
        "jszip": "^3.5.0",
        "lerna": "^3.22.1",
        "lint-staged": "^9.4.2",
        "mini-css-extract-plugin": "^0.9.0",
        "mjml": "^4.6.3",
        "mjml-react": "^1.0.57",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "prettier": "^1.18.2",
        "prettier-eslint-cli": "^5.0.0",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-is": "^16.11.0",
        "require-context": "^1.1.0",
        "rollup": "^2.16.1",
        "rollup-plugin-size-snapshot": "^0.12.0",
        "rollup-plugin-terser": "^6.1.0",
        "sass-loader": "^8.0.2",
        "shell-quote": "^1.7.2",
        "style-loader": "^1.2.1",
        "stylelint": "^13.1.0",
        "stylelint-config-recommended": "^3.0.0",
        "stylelint-config-styled-components": "^0.1.1",
